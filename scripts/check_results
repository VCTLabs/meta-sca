ret = 0
script_path = os.path.join(os.path.dirname(__file__), "check_result")
_mods = _data.keys()
if len(sys.argv) > 2:
    _mods = sys.argv[2:]
for k,v in _data.items():
    if k not in _mods:
        continue
    for finding in v:
        try:
            subprocess.check_call([script_path, k, finding, sys.argv[1]])
        except subprocess.CalledProcessError as e:
            ret = -1
sys.exit(ret)